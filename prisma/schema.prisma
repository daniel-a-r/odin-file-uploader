generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String

  folders Folder[]
  files   File[]
}

model Folder {
  id        String     @id @default(uuid())
  role      FolderRole @default(REGULAR)
  name      String
  createdAt DateTime   @default(now())

  files File[]

  folders  Folder[] @relation("FolderParentFolder")
  parent   Folder?  @relation("FolderParentFolder", fields: [parentId], references: [id])
  parentId String?

  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId String
}

model File {
  id         String   @id @default(uuid())
  name       String
  uploadedAt DateTime @default(now())

  parent   Folder @relation(fields: [parentId], references: [id])
  parentId String

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String
}

enum FolderRole {
  ROOT
  REGULAR
}
