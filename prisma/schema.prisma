generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  folders  Folder[]
}

model Folder {
  id         String     @id @default(uuid())
  role       FolderRole @default(REGULAR)
  name       String
  files      File[]
  folders    Folder[]   @relation("FolderRootFolder")
  folderId   String
  rootFolder Folder     @relation("FolderRootFolder", fields: [folderId], references: [id])

  User   User   @relation(fields: [userId], references: [id])
  userId String
}

model File {
  id       String @id @default(uuid())
  name     String
  Folder   Folder @relation(fields: [folderId], references: [id])
  folderId String
}

enum FolderRole {
  ROOT
  REGULAR
}
